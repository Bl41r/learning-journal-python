{% extends "my_template.jinja2" %}
{% block content %}

<h1>Login</h1>
<form action="{{ request.route_url('login') }}" method="POST">
    <h5>Username: </h5>
    <input type="text" value="" name="user">
    <h5>Password: </h5>
    <input type="password" name="pass"><br>
    <input type="submit" value="Submit">
</form>

{% if bogus_attempt %}
<script>
    alert('Try again.');
</script>
{% endif %}
<a href="../">Back to Home</a>

{% endblock %}